{{!-- recieve array of wishListItems, each item should be an object with 'title and author properties' --}}
<!-- wishlist.handlebars -->
<div class="dropdown-menu wishlist-dropdown">
  <div class="row">
    {{#each wishlistItems}}
    <div class="col-6">
        {{!-- replace {{this.id}} with the correct identifier so user can access book --}}
      <a href="/book/{{this.id}}">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.author}}</p>
            <button class="btn btn-link share-button" data-book-id="{{this.id}}">ðŸ”—</button>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>
